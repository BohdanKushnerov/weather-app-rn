{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@api/*": ["./api/*"],
      "@assets/*": ["./assets/*"],
      "@screens/*": ["./screens/*"],
      "@components/*": ["./components/*"],
      "@utils/*": ["./utils/*"],
      "@interfaces/*": ["./interfaces/*"],
      "@customEnums/*": ["customEnums/*"],
      "@customTypes/*": ["./customTypes/*"],
      "@context/*": ["./context/*"]
    }
  },
  "include": [
    "my-app.d.ts",
    "App.tsx",
    "screens/**/*.ts",
    "screens/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx"
  ]
}
